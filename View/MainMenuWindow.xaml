<Window x:Class="BookingApp.View.MainMenuWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BookingApp.View"
        mc:Ignorable="d"
        Title="Main menu" Height="400" Width="400"
        WindowStartupLocation="CenterScreen">
    
    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>
    </Window.Resources>
    
    <Grid>
        <StackPanel Margin="20">
            <TextBlock Text="{Binding WelcomeText}"
                       FontSize="18"
                       Margin="0,0,0,5"/>
            <TextBlock Text="{Binding RoleText}"
                       FontSize="14"
                       Margin="0,0,0,20"/>

            <Button Content="View all hotels"
                    Width="150"
                    Height="30"
                    Margin="0,0,0,10"
                    Click="ViewAllHotels_Click"/>

            <Button Content="Search hotels"
                    Width="150"
                    Height="30"
                    Margin="0,0,0,10"
                    Click="SearchHotels_Click"/>

            <Button Content="Reserve apartment"
                    Width="150"
                    Height="30"
                    Margin="0,0,0,10"
                    Click="ReserveApartment_Click"
                    Visibility="{Binding IsGuest, Converter={StaticResource BoolToVis}}"/>

            <Button Content="My reservations"
                    Width="150"
                    Height="30"
                    Margin="0,0,0,10"
                    Click="MyReservations_Click"
                    Visibility="{Binding IsGuest, Converter={StaticResource BoolToVis}}"/>

            <Button Content="Manage reservations"
                    Width="150"
                    Height="30"
                    Margin="0,0,0,10"
                    Click="OwnerReservations_Click"
                    Visibility="{Binding IsOwner, Converter={StaticResource BoolToVis}}"/>

            <Button Content="My hotels"
                    Width="150"
                    Height="30"
                    Margin="0,0,0,10"
                    Click="OwnerHotels_Click"
                    Visibility="{Binding IsOwner, Converter={StaticResource BoolToVis}}"/>

            <Button Content="Manage apartments"
                    Width="150"
                    Height="30"
                    Margin="0,0,0,10"
                    Click="OwnerApartments_Click"
                    Visibility="{Binding IsOwner, Converter={StaticResource BoolToVis}}"/>

            <Button Content="Register owner"
                    Width="150"
                    Height="30"
                    Margin="0,0,0,10"
                    Click="RegisterOwner_Click"
                    Visibility="{Binding IsAdmin, Converter={StaticResource BoolToVis}}"/>

            <Button Content="Create hotel"
                    Width="150"
                    Height="30"
                    Margin="0,0,0,10"
                    Click="CreateHotel_Click"
                    Visibility="{Binding IsAdmin, Converter={StaticResource BoolToVis}}"/>

            <Button Content="Logout"
                    Width="150"
                    Height="30"
                    Margin="0,0,0,10"
                    Click="Logout_Click"/>

        </StackPanel>
    </Grid>
</Window>
