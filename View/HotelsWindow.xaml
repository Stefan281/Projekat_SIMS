<Window x:Class="BookingApp.View.HotelsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Hotels"
        Height="400"
        Width="700"
        WindowStartupLocation="CenterScreen">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <!-- back dugme -->
            <RowDefinition Height="40"/>
            <!-- sort -->
            <RowDefinition Height="*"/>
            <!-- tabela -->
        </Grid.RowDefinitions>

        <!-- BACK dugme -->
        <StackPanel Grid.Row="0" Orientation="Horizontal">
            <Button Width="80"
                    Height="25"
                    Click="Back_Click">
                <!-- Možeš i samo tekst "Back" ako nećeš strelicu -->
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="←"
                               FontSize="16"
                               VerticalAlignment="Center"
                               Margin="0,0,5,0"/>
                    <TextBlock Text="Back"
                               VerticalAlignment="Center"/>
                </StackPanel>
            </Button>
        </StackPanel>

        <!-- Sort by stars -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" VerticalAlignment="Center">
            <TextBlock Text="Sort by stars:"
                       VerticalAlignment="Center"
                       Margin="0,0,10,0"/>
            <ComboBox Width="180"
                      ItemsSource="{Binding SortOptions}"
                      SelectedItem="{Binding SelectedSortOption}"
                      VerticalAlignment="Center"/>
        </StackPanel>

        <!-- Tabela hotela -->
        <DataGrid Grid.Row="2"
                  ItemsSource="{Binding Hotels}"
                  AutoGenerateColumns="False"
                  IsReadOnly="True"
                  SelectionMode="Single"
                  HeadersVisibility="Column">

            <DataGrid.Columns>
                <DataGridTextColumn Header="Code" Binding="{Binding Code}" Width="80"/>
                <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="*"/>
                <DataGridTextColumn Header="Year built" Binding="{Binding YearBuilt}" Width="100"/>
                <DataGridTextColumn Header="Stars" Binding="{Binding Stars}" Width="80"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>