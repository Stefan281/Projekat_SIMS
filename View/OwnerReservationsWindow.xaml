<Window x:Class="BookingApp.View.OwnerReservationsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Owner reservations"
        Height="500"
        Width="900"
        WindowStartupLocation="CenterScreen">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <!-- back -->
            <RowDefinition Height="40"/>
            <!-- hotel + filter -->
            <RowDefinition Height="60"/>
            <!-- reject reason + buttons -->
            <RowDefinition Height="30"/>
            <!-- messages -->
            <RowDefinition Height="*"/>
            <!-- grid -->
        </Grid.RowDefinitions>

        <!-- Back -->
        <StackPanel Grid.Row="0" Orientation="Horizontal">
            <Button Width="80"
                    Height="25"
                    Click="Back_Click">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="←"
                               FontSize="16"
                               VerticalAlignment="Center"
                               Margin="0,0,5,0"/>
                    <TextBlock Text="Back"
                               VerticalAlignment="Center"/>
                </StackPanel>
            </Button>
        </StackPanel>

        <!-- Hotel + filter -->
        <StackPanel Grid.Row="1"
                    Orientation="Horizontal"
                    VerticalAlignment="Center">
            <TextBlock Text="Hotel:"
                       VerticalAlignment="Center"
                       Margin="0,0,5,0"/>
            <ComboBox Width="220"
                      ItemsSource="{Binding OwnerHotels}"
                      SelectedItem="{Binding SelectedHotel}"
                      DisplayMemberPath="Name"
                      VerticalAlignment="Center"
                      Margin="0,0,20,0"/>

            <TextBlock Text="Filter:"
                       VerticalAlignment="Center"
                       Margin="0,0,5,0"/>
            <ComboBox Width="150"
                      ItemsSource="{Binding FilterOptions}"
                      SelectedItem="{Binding SelectedFilter}"
                      VerticalAlignment="Center"
                      Margin="0,0,20,0"/>

        </StackPanel>

        <!-- Reject reason + buttons -->
        <StackPanel Grid.Row="2"
                    Orientation="Horizontal"
                    VerticalAlignment="Center">
            <TextBlock Text="Rejection reason:"
                       VerticalAlignment="Center"
                       Margin="0,0,5,0"/>
            <TextBox Width="300"
                     Text="{Binding RejectionReasonInput, UpdateSourceTrigger=PropertyChanged}"
                     Margin="0,0,20,0"/>

            <Button Content="Approve"
                    Width="90"
                    Height="25"
                    Command="{Binding ApproveCommand}"
                    Margin="0,0,10,0"/>

            <Button Content="Reject"
                    Width="90"
                    Height="25"
                    Command="{Binding RejectCommand}"/>
        </StackPanel>

        <!-- Messages -->
        <StackPanel Grid.Row="3"
                    Orientation="Vertical"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center">
            <TextBlock Text="{Binding ErrorMessage}"
                       Foreground="Red"
                       HorizontalAlignment="Center"/>
            <TextBlock Text="{Binding InfoMessage}"
                       Foreground="Green"
                       HorizontalAlignment="Center"/>
        </StackPanel>

        <!-- Rezervacije -->
        <DataGrid Grid.Row="4"
                  ItemsSource="{Binding Reservations}"
                  SelectedItem="{Binding SelectedReservation}"
                  AutoGenerateColumns="False"
                  IsReadOnly="True"
                  SelectionMode="Single"
                  HeadersVisibility="Column">

            <DataGrid.Columns>
                <DataGridTextColumn Header="Request Id" Binding="{Binding RequestId}" Width="80"/>
                <DataGridTextColumn Header="Hotel" Binding="{Binding HotelCode}" Width="100"/>
                <DataGridTextColumn Header="Apartment" Binding="{Binding ApartmentName}" Width="150"/>
                <DataGridTextColumn Header="Guest" Binding="{Binding GuestEmail}" Width="200"/>

                <DataGridTextColumn Header="Start date" Width="120">
                    <DataGridTextColumn.Binding>
                        <Binding Path="StartDate" StringFormat="{}{0:yyyy-MM-dd}" />
                    </DataGridTextColumn.Binding>
                </DataGridTextColumn>

                <DataGridTextColumn Header="End date" Width="120">
                    <DataGridTextColumn.Binding>
                        <Binding Path="EndDate" StringFormat="{}{0:yyyy-MM-dd}" />
                    </DataGridTextColumn.Binding>
                </DataGridTextColumn>

                <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="100"/>
                <DataGridTextColumn Header="Rejection reason" Binding="{Binding RejectionReason}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
