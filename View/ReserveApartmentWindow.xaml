<Window x:Class="BookingApp.View.ReserveApartmentWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Reserve apartment"
        Height="470"
        Width="800"
        WindowStartupLocation="CenterScreen">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <!-- back -->
            <RowDefinition Height="60"/>
            <!-- mode + dates -->
            <RowDefinition Height="30"/>
            <!-- messages -->
            <RowDefinition Height="*"/>
            <!-- grid -->
            <RowDefinition Height="50"/>
            <!-- button -->
        </Grid.RowDefinitions>

        <!-- Back -->
        <StackPanel Grid.Row="0" Orientation="Horizontal">
            <Button Width="80"
                    Height="25"
                    Click="Back_Click">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="←"
                               FontSize="16"
                               VerticalAlignment="Center"
                               Margin="0,0,5,0"/>
                    <TextBlock Text="Back"
                               VerticalAlignment="Center"/>
                </StackPanel>
            </Button>
        </StackPanel>

        <!-- Mode + dates -->
        <StackPanel Grid.Row="1"
                    Orientation="Vertical"
                    VerticalAlignment="Center">

            <!-- Izbor tipa rezervacije -->
            <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                <TextBlock Text="Reservation type:"
                           VerticalAlignment="Center"
                           Margin="0,0,10,0"/>
                <ComboBox Width="150"
                          ItemsSource="{Binding ReservationModes}"
                          SelectedItem="{Binding SelectedReservationMode}"
                          VerticalAlignment="Center"/>
            </StackPanel>

            <!-- Datumi -->
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Start date:"
                           VerticalAlignment="Center"
                           Margin="0,0,10,0"/>
                <DatePicker SelectedDate="{Binding SelectedDate, Mode=TwoWay}"
                            Width="150"
                            Margin="0,0,20,0"/>

                <!-- End date – vidi se samo kad je Multiple days -->
                <StackPanel Orientation="Horizontal">
                    <StackPanel.Style>
                        <Style TargetType="StackPanel">
                            <Setter Property="Visibility" Value="Collapsed"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsMultipleDays}" Value="True">
                                    <Setter Property="Visibility" Value="Visible"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </StackPanel.Style>

                    <TextBlock Text="End date:"
                               VerticalAlignment="Center"
                               Margin="0,0,10,0"/>
                    <DatePicker SelectedDate="{Binding EndDate, Mode=TwoWay}"
                                Width="150"/>
                </StackPanel>
            </StackPanel>
        </StackPanel>

        <!-- Messages -->
        <StackPanel Grid.Row="2"
                    Orientation="Vertical"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center">
            <TextBlock Text="{Binding ErrorMessage}"
                       Foreground="Red"
                       HorizontalAlignment="Center"/>
            <TextBlock Text="{Binding WarningMessage}"
                       Foreground="Orange"
                       HorizontalAlignment="Center"/>
        </StackPanel>

        <!-- Apartments grid -->
        <DataGrid Grid.Row="3"
                  ItemsSource="{Binding Apartments}"
                  SelectedItem="{Binding SelectedApartment}"
                  AutoGenerateColumns="False"
                  IsReadOnly="True"
                  SelectionMode="Single"
                  HeadersVisibility="Column">

            <DataGrid.Columns>
                <DataGridTextColumn Header="Hotel code" Binding="{Binding HotelCode}" Width="100"/>
                <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="150"/>
                <DataGridTextColumn Header="Description" Binding="{Binding Description}" Width="*"/>
                <DataGridTextColumn Header="Rooms" Binding="{Binding RoomCount}" Width="80"/>
                <DataGridTextColumn Header="Max guests" Binding="{Binding MaxGuests}" Width="100"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Reserve -->
        <StackPanel Grid.Row="4"
                    Orientation="Horizontal"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center">
            <Button Content="Reserve"
                    Width="100"
                    Height="30"
                    Command="{Binding ReserveCommand}"/>
        </StackPanel>
    </Grid>
</Window>