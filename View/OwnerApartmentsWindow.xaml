<Window x:Class="BookingApp.View.OwnerApartmentsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Manage apartments"
        Height="500"
        Width="900"
        WindowStartupLocation="CenterScreen">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <!-- back -->
            <RowDefinition Height="40"/>
            <!-- hotel selection -->
            <RowDefinition Height="40"/>
            <!-- messages -->
            <RowDefinition Height="*"/>
            <!-- apartments grid -->
            <RowDefinition Height="150"/>
            <!-- new apartment form -->
        </Grid.RowDefinitions>

        <!-- Back -->
        <StackPanel Grid.Row="0" Orientation="Horizontal">
            <Button Width="80"
                    Height="25"
                    Click="Back_Click">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="←"
                               FontSize="16"
                               VerticalAlignment="Center"
                               Margin="0,0,5,0"/>
                    <TextBlock Text="Back"
                               VerticalAlignment="Center"/>
                </StackPanel>
            </Button>
        </StackPanel>

        <!-- Hotel selection -->
        <StackPanel Grid.Row="1"
                    Orientation="Horizontal"
                    VerticalAlignment="Center">
            <TextBlock Text="Hotel:"
                       VerticalAlignment="Center"
                       Margin="0,0,5,0"/>
            <ComboBox Width="250"
                      ItemsSource="{Binding OwnerHotels}"
                      SelectedItem="{Binding SelectedHotel}"
                      DisplayMemberPath="Name"
                      VerticalAlignment="Center"/>
        </StackPanel>

        <!-- Messages -->
        <StackPanel Grid.Row="2"
                    Orientation="Vertical"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center">
            <TextBlock Text="{Binding ErrorMessage}"
                       Foreground="Red"
                       HorizontalAlignment="Center"/>
            <TextBlock Text="{Binding InfoMessage}"
                       Foreground="Green"
                       HorizontalAlignment="Center"/>
        </StackPanel>

        <!-- Apartments grid -->
        <DataGrid Grid.Row="3"
                  ItemsSource="{Binding Apartments}"
                  AutoGenerateColumns="False"
                  IsReadOnly="True"
                  SelectionMode="Single"
                  HeadersVisibility="Column">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Id" Binding="{Binding Id}" Width="60"/>
                <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="150"/>
                <DataGridTextColumn Header="Description" Binding="{Binding Description}" Width="*"/>
                <DataGridTextColumn Header="Rooms" Binding="{Binding RoomCount}" Width="80"/>
                <DataGridTextColumn Header="Max guests" Binding="{Binding MaxGuests}" Width="100"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- New apartment form -->
        <GroupBox Grid.Row="4" Header="Add new apartment" Margin="0,5,0,0">
            <Grid Margin="5">
                <Grid.RowDefinitions>
                    <RowDefinition Height="30"/>
                    <RowDefinition Height="30"/>
                    <RowDefinition Height="30"/>
                    <RowDefinition Height="30"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="100"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="120"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Row="0" Grid.Column="0"
                           Text="Name:"
                           VerticalAlignment="Center"/>
                <TextBox Grid.Row="0" Grid.Column="1"
                         Text="{Binding NewName, UpdateSourceTrigger=PropertyChanged}"/>

                <TextBlock Grid.Row="1" Grid.Column="0"
                           Text="Description:"
                           VerticalAlignment="Center"/>
                <TextBox Grid.Row="1" Grid.Column="1"
                         Text="{Binding NewDescription, UpdateSourceTrigger=PropertyChanged}"/>

                <TextBlock Grid.Row="2" Grid.Column="0"
                           Text="Rooms:"
                           VerticalAlignment="Center"/>
                <TextBox Grid.Row="2" Grid.Column="1"
                         Text="{Binding NewRoomCount, UpdateSourceTrigger=PropertyChanged}"/>

                <TextBlock Grid.Row="3" Grid.Column="0"
                           Text="Max guests:"
                           VerticalAlignment="Center"/>
                <TextBox Grid.Row="3" Grid.Column="1"
                         Text="{Binding NewMaxGuests, UpdateSourceTrigger=PropertyChanged}"/>

                <Button Grid.Row="0"
                        Grid.Column="2"
                        Grid.RowSpan="4"
                        Content="Add apartment"
                        Width="100"
                        Height="30"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Command="{Binding AddApartmentCommand}"/>
            </Grid>
        </GroupBox>
    </Grid>
</Window>